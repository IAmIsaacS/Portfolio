---
import Header from "../components/Header.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/myAvatar.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Título optimizado para SEO -->
    <title>
      Isaac Salazar - Desarrollador Web Profesional | Desarrollo Frontend y
      Backend
    </title>

    <!-- Meta descripción clara y atractiva con palabras clave relevantes -->
    <meta
      name="description"
      content="Isaac Salazar, desarrollador web profesional especializado en desarrollo frontend y backend. Crea sitios web modernos, responsivos y optimizados para SEO."
    />

    <!-- Meta robots para permitir indexación y seguimiento -->
    <meta name="robots" content="index, follow" />

    <!-- Autor del sitio -->
    <meta name="author" content="Isaac Salazar" />

    <!-- Open Graph para mejorar la apariencia en redes sociales -->
    <meta
      property="og:title"
      content="Isaac Salazar - Desarrollador Web Profesional"
    />
    <meta
      property="og:description"
      content="Especialista en desarrollo web frontend y backend, creando experiencias digitales efectivas y optimizadas."
    />
    <meta property="og:image" content="/myAvatar.png" />
    <!--<meta property="og:url" content="https://tu-sitio-web.com" /> -->
    <meta property="og:type" content="website" />

    <!-- Twitter Card para compartir en Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Isaac Salazar - Desarrollador Web Profesional"
    />
    <meta
      name="twitter:description"
      content="Desarrollo web moderno y optimizado por Isaac Salazar. Frontend y backend con enfoque en SEO y usabilidad."
    />
    <meta name="twitter:image" content="/myAvatar.png" />
  </head>

  <body>
    <Nav />
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
